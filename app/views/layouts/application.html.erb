<!DOCTYPE html>
<html>
	<head>
		<% if content_for?(:title) %>
			<%= content_for(:title) %>
		<% else %>
			<title>Default title</title>
		<% end %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default navbar-static-top navbar-inverse">
			<div class="container">
				<ul class="nav navbar-nav">
					<li><%= link_to "home", root_path %></li>
					<li><%= link_to "path to foo controller", foos_path %></li>
					<li><%= link_to "path to bar controller", bars_path %></li>
				</ul>
			</div>
		</nav>
		<p class="notice"> <%= notice %></p>
		<p class="alert"> <%= alert %></p>
		<%= yield %>

	</body>
</html>
